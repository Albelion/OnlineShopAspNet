
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Add New User</h2>
<form asp-action="Delete" method="post" id="role-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class = "text-danger"></div>
        <h3>Do yot want to delete this role?</h3>
        <div class="form-group row">
            <div class="col-2">
                <label>RoleName</label>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id"/>
            <div class = "col-5">
                <input id=name name="name" readonly required value="@ViewBag.name" class="form-control" />
            </div>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Delete" />
            <a asp-action="Index" class= "btn btn-success">Back to List </a>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync(partialViewName:"_ValidationScriptsPartial");}
    <script>
        $(document).ready(function(){
            $("#user-form").validate({
    rules: {
    UserName : {
    required: true,
    minlength: 3
        },
    PasswordHash : {
    required: true,
    minlength: 3
        }
    },
    messages:{
        UserName:"Enter your email",
        PasswordHash:"Enter your password"
    }
});
        });
    </script>
}