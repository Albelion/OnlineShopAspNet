@model OnlineShop.Models.ApplicationUser
@{
    ViewData["Title"] = "Locout";
}

<br />
<h2 class="text-info">Locout User</h2>
<form asp-action="Locout" method="post" id="user-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class = "text-danger">

        </div>
        <input type="hidden" asp-for="Id" />
        <h3>@ViewBag.message</h3>
        <h3>Do you want to locout this user?</h3>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class = "col-5">
                <input asp-for="UserName" class="form-control" readonly/>
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstNmae"></label>
            </div>
            <div class = "col-5">
                <input asp-for="FirstNmae" class="form-control" readonly/>
            </div>
            <span asp-validation-for="FirstNmae" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName"></label>
            </div>
            <div class = "col-5">
                <input asp-for="LastName" class="form-control" readonly />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div>
            <input type="submit" class="btn btn-primary" value="Locout" />
            <a asp-action="Index" class= "btn btn-success">Back to List </a>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync(partialViewName:"_ValidationScriptsPartial");}
    <script>
        $(document).ready(function(){
            $("#user-form").validate({
    rules: {
    UserName : {
    required: true,
    minlength: 3
        },
    PasswordHash : {
    required: true,
    minlength: 3
        }
    },
    messages:{
        UserName:"Enter your email",
        PasswordHash:"Enter your password"
    }
});
        });
    </script>
}